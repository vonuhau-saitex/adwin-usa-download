{%- liquid
  assign overlay_color = block.settings.overlay_color
  assign overlay_opacity = block.settings.overlay_opacity
-%}
<div
  class="gallery__item"
  {{ block.shopify_attributes }}
  style="--overlay-color-rgb: {{ overlay_color.rgb | replace: ' ' , ',' }}; --overlay-opacity: {{ overlay_opacity | divided_by: 100.0 }}"
>
  <figure class="aspect-ratio">
    <a href="{{ block.settings.link}}">
      {% if block.settings.promotion_type == 'image' %}
        {%- if block.settings.image -%}
          {%- liquid
            assign sizes = block.settings.image.width | append: block.settings.height
          -%}
          {%- render 'responsive-image', image: block.settings.image, sizes: sizes, is-promo: true -%}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder_svg_tag' }}
        {%- endif -%}
      {% else %}
        {% if block.settings.video.sources[0].url contains '.mp4' %}
          <video src="{{block.settings.video.sources[0].url}}" loop muted playsinline autoplay></video>
        {% else %}
          <video src="{{block.settings.video.sources[1].url}}" loop muted playsinline autoplay></video>
        {% endif %}
      {% endif %}
    </a>
    <div class="gallery__item-content content-middle-center text-center">
      <div>
        <div class="top-row">
          {% if block.settings.title != blank %}
            <h4>
              <a href="{{ block.settings.link}}">{{ block.settings.title }}</a>
            </h4>
          {% endif %}
          {% if block.settings.text != blank %}
            <p>{{ block.settings.text }}</p>
          {% endif %}
        </div>
        {% if block.settings.link_label != blank %}
          {% liquid
            assign button_class = 'button white'
            if block.settings.use_text_button
              assign button_class = 'text-button white'
            endif
          -%}
          <div class="text-button">
            <a
              class="bottom-row text-button"
              {% if block.settings.link == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ block.settings.link }}"
              {% endif %}
              ><span>{{ block.settings.link_label }}</span></a
            >
          </div>
        {% endif %}
        {% if block.settings.block_link != blank %}
          <a href="{{ block.settings.block_link }}" class="gallery__item-content-link" target="_blank"></a>
        {% endif %}
      </div>
    </div>
  </figure>
</div>
