{{- 'shop-by-fit.css' | asset_url | stylesheet_tag -}}
{%- liquid
	assign full_width = section.settings.full_width
	assign text_size = section.settings.text_size
	assign autoplay = section.settings.autoplay
	assign color_bg = section.settings.color_bg
	assign color_text = section.settings.color_text
	assign disable_top_spacing = section.settings.disable_top_spacing
	assign disable_bottom_spacing = section.settings.disable_bottom_spacing

-%}
<div class="row{% if full_width %} full-width-row-full{% endif %}">
	<div class="small-12 columns">
		<div class="section-spacing-padding{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %}" style="--color-bg:{{ color_bg }}; --color-text:{{ color_text }}; --dot-speed: {{ autoplay | divided_by: 1000 | append: 's' }};">
			<div class="section-container text-{{ text_size }}">
				<div class="section-title">SHOP BY FIT</div>
				<div class="container" >
					{%- for block in section.blocks -%}
						<div class="block-content" {{ block.shopify_attributes }}>
                                <a href="{{ block.settings.link }}"><span class="text-nav">{{ block.settings.text }}</span>	</a>  
                                <img src="{{ block.settings.image_content | image_url }}" alt="" height= auto width="210px" loading="lazy" >
						</div>
					{%- endfor -%}
						
				</div>
			</div>
		</div>
	</div>
</div>
{% schema %}
  {
    "name": "Shop by Fit",
		"class": "section-shop-by-fit",
    "settings": [
			{
        "type": "checkbox",
        "id": "full_width",
        "label": "Make section full width",
        "default": true
      },
      {
        "type": "select",
        "id": "text_size",
        "label": "Text size",
        "default": "medium",
        "options": [
          { "value": "small", "label": "Small" },
          { "value": "medium", "label": "Medium" },
          { "value": "large", "label": "Large" }
        ]
      },			
			{
	      "type": "header",
	      "content": "Colors"
	    },
			{
        "type": "color",
        "id": "color_bg",
        "label": "Background",
        "default": "transparent"
      },
			{
        "type": "color",
        "id": "color_text",
        "label": "Text",
        "default": "#151515"
      },
			{
	      "type": "header",
	      "content": "Spacing"
	    },
			{
				"type": "checkbox",
				"id": "disable_top_spacing",
				"default": false,
				"label": "Remove top spacing"
			},
			{
				"type": "checkbox",
				"id": "disable_bottom_spacing",
				"default": false,
				"label": "Remove bottom spacing"
			}
    ],
    "blocks": [
      {
        "type": "quote",
        "name": "Testimonial",
        "settings": [
					{
						"type": "image_picker",
						"id": "image_content",
						"label": "Image Content"
					},
					
          {
            "type": "textarea",
            "id": "text",
            "label": "Text"
          },
          {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
        ]
      }
    ],
    "presets": [
      {
        "name": "Shop by Fit",
				"blocks": [
	        {
	          "type": "quote"
	        },
	        {
	          "type": "quote"
	        },
	        {
	          "type": "quote"
	        }
	      ]
      }
    ]
  }
{% endschema %}
