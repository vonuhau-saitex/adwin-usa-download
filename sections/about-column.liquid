{{- 'about-column.css' | asset_url | stylesheet_tag -}}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
{%- liquid
  assign columns_desktop = section.settings.columns_desktop
  assign section_width = section.settings.section_width
  assign column_spacing = section.settings.column_spacing
  assign content_position = section.settings.content_position
  assign text_alignment = section.settings.text_alignment
  assign mobile_swipe = section.settings.mobile_swipe
  assign image_ratio = section.settings.image_ratio
  assign heading_size = section.settings.heading_size
  assign overlay_color = section.settings.overlay_color
  assign overlay_opacity = section.settings.overlay_opacity
  assign disable_top_spacing = section.settings.disable_top_spacing
  assign disable_bottom_spacing = section.settings.disable_bottom_spacing
-%}
<div class="row {{ section_width }}">
  <div class="small-12 columns">
    <div
      class="gallery gallery-spacing--{{ column_spacing }} text-{{ text_alignment }}{% if mobile_swipe %} swipe-on-mobile{% endif %} section-spacing{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %}"
      style="--gallery-columns: {{ columns_desktop }};--overlay-color-rgb: {{ overlay_color | color_extract: 'red' }}, {{ overlay_color | color_extract: 'green' }}, {{ overlay_color | color_extract: 'blue' }}; --overlay-opacity: {{ overlay_opacity | divided_by: 100.0 }}"
    >
<!--       <div class="gallery__headding-title">
        {{ heading_title }}
      </div> -->
      <div class="gallery__inner">
        {%- for block in section.blocks -%}
          <div class="gallery__item" {{ block.shopify_attributes }}>
            {%- liquid
              assign ratio = 1
              if image_ratio == 'adapt' and block.settings.image
                assign ratio = block.settings.image.aspect_ratio
              endif
            -%}
            <figure
              class="aspect-ratio aspect-ratio--{{ image_ratio }}"
              style="--ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;"
            >
              {%- if block.settings.image-hover -%}
                {%- liquid
                  assign sizes = '375x0,750x0'

                  unless section_width == 'grid'
                    assign sizes = sizes | append: ',1125x0'
                  endunless
                -%}
                <div class="image-hover1">
                {%- render 'responsive-image', image: block.settings.image-hover, sizes: sizes -%}
                </div>
              {%- endif -%}
              {%- if block.settings.image-hover-2 -%}
                {%- liquid
                  assign sizes = '375x0,750x0'

                  unless section_width == 'grid'
                    assign sizes = sizes | append: ',1125x0'
                  endunless
                -%}
                <div class="image-hover2">
                {%- render 'responsive-image', image: block.settings.image-hover-2, sizes: sizes -%}
                </div>
              {%- endif -%}
             {%- if block.settings.image-hover-3 -%}
                {%- liquid
                  assign sizes = '375x0,750x0'

                  unless section_width == 'grid'
                    assign sizes = sizes | append: ',1125x0'
                  endunless
                -%}
               <div class="image-hover3">
                {%- render 'responsive-image', image: block.settings.image-hover-3, sizes: sizes -%}
               </div>
              {%- endif -%}
              <div class="gallery__item-content content-{{ content_position }} {% if block.type == "image" %} content-hover-img {% endif %}">
                <div>
                  {% if block.settings.subheading != blank %}
                    <p class="subheading">{{ block.settings.subheading }}</p>
                  {% endif %}
                  {% if block.settings.title != blank %}
                    <h4 class="{{ heading_size }}">{{ block.settings.title }}</h4>
                  {% endif %}
                  {% if block.settings.text != blank %}
                    <p>{{ block.settings.text }}</p>
                  {% endif %}
          {% if block.type == "column" %} 
                  <div class="container-info-detail">
                    <div class="info">
                      <img src="{{ block.settings.image-icon_1 | image_url }}" width="auto" height="30" />
                      <p class="info-heading">{{ block.settings.head-desc_1 }}</p>
                      <p class="info-desc">{{ block.settings.desc_1 }}</p>
                    </div>
                    <div class="info">
            <img src="{{ block.settings.image-icon_2 | image_url }}" width="auto" height="30" />
                      <p class="info-heading">{{ block.settings.head-desc_2 }}</p>
                      <p class="info-desc">{{ block.settings.desc_2 }}</p></div>
                    <div class="info">
            <img src="{{ block.settings.image-icon_3 | image_url }}" width="auto" height="30" />
                      <p class="info-heading">{{ block.settings.head-desc_3 }}</p>
                      <p class="info-desc">{{ block.settings.desc_3 }}</p></div>
                  </div>
            {% endif %}
                  {% if block.settings.link_label != blank %}
                    {% liquid
                      assign button_class = 'button about-custom-button'
                      if block.settings.use_text_button
                        assign button_class = 'text-button'
                      endif
                    -%}
                    <a
                      class="{{ button_class }}"
                      {% if block.settings.link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.link }}"
                      {% endif %}
                      ><span>{{ block.settings.link_label }}</span></a
                    >
                  {% endif %}
                  {% if block.settings.block_link != blank %}
                    <a href="{{ block.settings.block_link }}" class="gallery__item-content-link" target="_blank"></a>
                  {% endif %}                
                </div>
                {% if block.type == "image" %} 
                <div class="content-hover">
                  <div>
                    <p class="sub-title">EXPLORE</p>
                  {% if block.settings.title-nav != blank %}
                    <a href="/pages/materials" class="title nav-1">{{ block.settings.title-nav }}</a>
                  {% endif %}
                  {% if block.settings.title-nav-2 != blank %}
                    <a href="/pages/production" class="title nav-2">{{ block.settings.title-nav-2 }}</a>
                  {% endif %}
                  {% if block.settings.title-nav-3 != blank %}
                    <a href="/pages/upcycling" class="title nav-3">{{ block.settings.title-nav-3 }}</a>
                  {% endif %}
                  </div>
                  
                  <div class="image">
                   <img src="https://cdn.shopify.com/s/files/1/0678/6315/0899/files/image_18.svg?v=1686799722" width="auto" height="92" />
                  </div>
                </div>
               
                {% endif %}
              </div>
            </figure>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function(){
    $(".image-hover1").css("display","block");
    $(".image-hover2").css("display","none");
    $(".image-hover3").css("display","none");
     $(".nav-1" ).hover(
      function() {
        $(".image-hover1").show(1000);
        $(".image-hover2").css("display","none");
        $(".image-hover3").css("display","none");
      });
     $(".nav-2" ).hover(
      function() {
        $(".image-hover1").css("display","none");
        $(".image-hover2").show(1000);
        $(".image-hover3").css("display","none");
      });
     $(".nav-3" ).hover(
      function() {
        $(".image-hover1").css("display","none");
        $(".image-hover2").css("display","none");
        $(".image-hover3").show(1000);
      });
  });
</script>
