{%- liquid
  assign section_heading = section.settings.heading
  assign section_heading_left = section.settings.heading_left
  assign section_description = section.settings.description
  assign full_width = section.settings.full_width
  assign show_view_all_button = section.settings.is_show_view_all
  assign collection_parent = section.settings.collection_parent
  assign columns_desktop = section.settings.columns_desktop
  assign columns_mobile = section.settings.columns_mobile
  assign show_progress_bar = section.settings.show_progress_bar
  assign mobile_swipe = section.settings.mobile_swipe
  assign collections = section.settings.collection_list
  assign style = section.settings.style
  assign image_ratio = section.settings.image_ratio
  assign collection_layout = section.settings.layout
  assign overlay_color = section.settings.overlay_color
  assign overlay_opacity = section.settings.overlay_opacity
  assign disable_top_spacing = section.settings.disable_top_spacing
  assign disable_bottom_spacing = section.settings.disable_bottom_spacing
  assign is_carousel = false
  assign custom_viewall = section.settings.show_view_all

  if collection_layout == 'carousel'
    assign is_carousel = true
    assign carousel_class = 'carousel'
  endif
-%}
<div class="row{% if full_width %} full-width-row{% endif %}">
  <div class="small-12 columns 1111">
    <div
      class="list-collections section-spacing{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %}"
      style="--overlay-color-rgb: {{ overlay_color.rgb | replace: ' ' , ',' }}; --overlay-opacity: {{ overlay_opacity | divided_by: 100.0 }}; --var-collection-list-columns:{{ columns_desktop }}"
    >
      {% render 'section-header',
        section_heading: section_heading,
        section_description: section_description,
        section_heading_left: section_heading_left,
        show_view_all_button: show_view_all_button,
        collection_parent: collection_parent,
        custom_viewall: custom_viewall
      %}	  
      <div class="collection-grid collection-grid__{{ collection_layout }} {{ carousel_class }}{% if mobile_swipe and is_carousel == false %} swipe-on-mobile{% endif %} mobile-columns--{{ columns_mobile | default: 1 }}">
        {% if collections.count > 0 %}
          {% for collection in collections %}
            {% render 'collection-card',
              grid_collection: collection,
              media_aspect_ratio: image_ratio,
              style: style,
              layout: collection_layout,
              index: forloop.index,
              is_carousel: is_carousel,
              columns_desktop: columns_desktop,
              columns_mobile: columns_mobile,
              grid_collection_title__onlyname: collection.metafields.custom.displaying_name.value,
			  video_enable: section.settings.video
            %}
          {% endfor %}
        {% else %}
          {%- for i in (1..6) -%}
            {% render 'collection-card',
              grid_collection: empty,
              media_aspect_ratio: image_ratio,
              style: style,
              layout: collection_layout,
              index: forloop.index,
              is_carousel: is_carousel,
              columns_desktop: columns_desktop,
              columns_mobile: columns_mobile
            %}
          {% endfor %}
        {% endif %}
        {%- for block in section.blocks -%}
          <div class="small-12 medium-4 carousel__slide columns">
            {%- render 'product-promotion', block: block -%}
          </div>
        {%- endfor -%}
        {%- if collection_layout == 'carousel' -%}
          {%- if collections.count > columns_desktop -%}
            <div class="flickity-nav flickity-prev" tabindex="0">{% render 'svg-icons' with 'edwin-arrow-left' %}</div>
            <div class="flickity-nav flickity-next" tabindex="0">{% render 'svg-icons' with 'edwin-arrow-right' %}</div>
          {%- endif -%}
        {%- endif -%}
      </div>
      {%- if collection_layout == 'carousel' and show_progress_bar -%}
        <div class="flickity-progress">
          <div class="flickity-progress--bar"></div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>
{{- 'list-collections.css' | asset_url | stylesheet_tag -}}
