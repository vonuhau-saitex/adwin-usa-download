{{- 'why-edwin.css' | asset_url | stylesheet_tag -}}

{%- liquid
    assign section_heading = section.settings.heading
    assign full_width = section.settings.full_width
    assign disable_top_spacing = section.settings.disable_top_spacing
    assign disable_bottom_spacing = section.settings.disable_bottom_spacing -%}

<div class="why-edwin section-spacing{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %}">
    <div class="row{% if full_width %} full-width-row{% endif %}">
        <div class="small-12 columns why-edwin_container">
            <div class="why-edwin__left_container">
                <div class="why-edwin__left_container-title">
                    {% render 'section-header', section_heading: section_heading %}
                </div>
                <div class="why-edwin__left_container-desc">
                    {{ section.settings.description }}
                </div>
                <div class="why-edwin-social">
                  <ul>
                      <li class=""><a href="https://www.instagram.com/edwinusa/" target="_blank">Instagram</a></li>
                      <li class=""><a href="https://www.facebook.com/edwinusa/" target="_blank">Facebook</a></li>
                      <li class=""><a href="https://www.pinterest.com/edwinusa_/" target="_blank">Pinterest</a></li>
                  </ul>
              </div>
            </div>
            <div class="why-edwin__right_container">
                <div class="why-edwin__right_container-subscribe-form-desc">
                    {{ section.settings.subscribe_form_desc }}
                </div>
                <div class="why-edwin__right_container-subscribe-form-container">
                    {% render 'why-edwin-email-signup-form' %}
                </div>
            </div>
        </div>
    </div>
</div>


{% schema %}
{
  "name": "Why EDWIN?",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why EDWIN?"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Make section full width",
      "default": true
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "True to its heritage, EDWIN combines thoughtfully designed jeans and innovation in sustainable manufacturing methods."
    },
    {
      "type": "text",
      "id": "subscribe_form_desc",
      "label": "Subscribe description",
      "default": "Subscribe to receive EDWIN updates and access to exclusive offers."
    },
    {
      "type": "text",
      "id": "subscribe_form_email_ph",
      "label": "Subscribe form email placeholder",
      "default": "Email Address..."
    },
    {
      "type": "text",
      "id": "subscribe_form_btn_label",
      "label": "Subscribe form button label",
      "default": "Subscribe"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "checkbox",
      "id": "disable_top_spacing",
      "default": false,
      "label": "Remove top spacing"
    },
    {
      "type": "checkbox",
      "id": "disable_bottom_spacing",
      "default": false,
      "label": "Remove bottom spacing"
    }
  ],
  "presets": [
    {
      "name": "Why EDWIN?",
      "category": "EDWIN CUSTOMIZATION"
    }
  ]
}
{% endschema %}

