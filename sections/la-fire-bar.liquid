<div class="top-bar">
  <div class="row">
    <div class="small-12 columns">
      {% if section.settings.heading != '' %}
      <div class="heading">{{ section.settings.heading }}</div>
      {% endif %}
      {% if section.settings.desc != '' %}
      <div class="desc">{{ section.settings.desc }}</div>
      {% endif %}
    </div>    
  </div>
</div>

{% schema %}
  {
    "name": "Top Bar",
    "class": "top-bar-section",
    "settings": [
      {
			"type": "text",
			"id": "heading",
			"label": "Heading"
		},
      {
			"type": "richtext",
			"id": "desc",
			"label": "Text"
		}
    ],
    "enabled_on": {
      "templates": ["*"],
      "groups": ["header"]
    },
    "presets": [
      {
        "name": "Top Bar",
        "settings": {
          
        }
      }
    ]
  }
{% endschema %}